<section class="ref">
  <style>
    body {
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
    }

    .referral-container {
      position: fixed;
      top: 7rem;
      right: 20px;
      z-index: 1;
      max-width: 420px;
      font-family: "Inter", "Helvetica Neue", Arial, sans-serif;
      color: #333333;
      text-align: center;
      margin: 0;
    }

    #confirmationMessage {
      margin-top: 10px;
      display: block;
    }

    .code-display {
      padding: 15px 25px;
      background-color: #ffffff;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08), 0 4px 8px rgba(0, 0, 0, 0.05);
      border: 1px solid #e0e0e0;
      transition: transform 0.3s ease, box-shadow 0.3s ease;

      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .code-display:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12), 0 6px 12px rgba(0, 0, 0, 0.07);
    }

    .referral-code {
      font-size: 1.2rem;
      font-weight: 600;
      color: #1a1a1a;
      letter-spacing: 0.8px;
      user-select: all;
      word-break: break-all;
    }

    .copy-button {
      background: none;
      border: none;
      cursor: pointer;
      padding: 8px;
      transition: color 0.2s ease, transform 0.2s ease;
      color: #888888;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      margin-left: 15px;
    }

    .copy-button:hover {
      color: #333333;
      transform: scale(1.1);
      background-color: #f0f0f0;
    }

    .copy-button svg {
      width: 22px;
      height: 22px;
      display: block;
    }

    .copy-button.copied-effect {
      color: #008000;
      transform: scale(1.05);
      background-color: #e6ffe6;
    }

    .confirmation-message {
      font-size: 1rem;
      font-weight: 600;
      color: #008000;
      opacity: 0;
      transition: opacity 0.3s ease-out;
    }

    .confirmation-message.show {
      opacity: 1;
    }
  </style>
  <div class="referral-container">
    <div class="code-display">
      <span id="textToCopy" class="referral-code">Copy Your REFCODE... </span>

      <button id="copyButton" class="copy-button" aria-label="Copy referral code">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M16 1H4C2.9 1 2 1.9 2 3v14h2V3h12V1zm3 4H8C6.9 5 6 5.9 6 7v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z" />
        </svg>
      </button>
    </div>

    <span id="confirmationMessage" class="confirmation-message">Copied! ðŸŽ‰</span>
  </div>
  <script type="module">
    document.addEventListener('DOMContentLoaded', () => {
      const copyButton = document.getElementById('copyButton');
      const textElement = document.getElementById('textToCopy');
      const confirmationMessage = document.getElementById('confirmationMessage');

      copyButton.addEventListener('click', async (e) => {
console.log(e);

        try {
          const response = await fetch("/refcode");

          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }

          const data = await response.json();
          console.log(data);
          

          if (data && data.refcode) {
            const textToCopy = data.refcode;

            await navigator.clipboard.writeText(textToCopy);

            confirmationMessage.classList.add('show');
            copyButton.classList.add('copied-effect');

            setTimeout(() => {
              confirmationMessage.classList.remove('show');
              copyButton.classList.remove('copied-effect');
            }, 1500);

          } else {
            throw new Error("Referral code not found in server response.");
          }

        } catch (err) {
          console.error('Failed to copy text or fetch code: ', err);
          alert('Failed to get the referral code from the server. Please try again.');
        }
      });
    });
  </script>
</section>