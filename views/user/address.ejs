<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />
  <link rel="stylesheet" href="style/partials.css">
  <link rel="stylesheet" href="style/swal.css">
  <link rel="stylesheet" href="style/account.css">
  <title>Account</title>
</head>

<body>
  <%- include('./partials/header.ejs') %>

  <section class="account wrapper">
    <h1 class="main-heading">My Profile</h1>
    <div class="container">
      <nav>
        <div class="image-container">
          <div class="avatar">
            <img src="<%= personalInfo?.avatar ? `${personalInfo.avatar}`: 'images/icons/account.svg' %>" alt="avatar">
          </div>
          <h5>HelloðŸ‘‹ <%= personalInfo ? personalInfo.fname: '' %></h5>
        </div>
        <ul>
          <li data-url="/account"><a href="#personal-information"><i data-lucide="user"></i><b>Personal Information</b></a></li>
          <li data-url="/myorders"><a href="#my-orders"><i data-lucide="shopping-bag"></i> <b>My Orders</b></a></li>
          <li data-url="/myreviews"><a href="#my-reviews"><i data-lucide="star"></i> <b>My Reviews</b></a></li>
          <li data-url="/mywishlist"><a href="#my-wishlist"><i data-lucide="heart"></i> <b>My Wishlist</b></a></li>
          <li class="active" data-url="/address"><a href="#manage-address"><i data-lucide="map-pin"></i> <b>Manage Address</b></a></li>
          <li data-url="/savedcards"><a href="#saved-cards"><i data-lucide="credit-card"></i> <b>Saved Cards</b></a></li>
          <li data-url="/mywallet"><a href="#my-wallet"><i data-lucide="wallet"></i> <b>My Wallet</b></a></li>
          <li data-url="/notification"><a href="#notification"><i data-lucide="bell"></i> <b>Notification</b></a></li>
          <li data-url="/settings"><a href="#settings"><i data-lucide="settings"></i> <b>Settings</b></a></li>
        </ul>
      </nav>
      <div class="sections">
        <ol style="display: flex; gap: 1rem; margin-block: 1rem; ">
          <li><a href="/">Home &raquo;</a></li>
          <li>Address</li>
        </ol>
        <section id="manage-address">
          <div class="container">
            <% if (!address || address.length === 0) { %>
            <h3>No Addresses Yet...</h3>
            <% } %>
            <% if (address) { %>
            <% address.forEach(a => { %>
            <article>
              <div class="content">
                <h5>
                  <%= a.fullName %>
                </h5>
                <p>
                  <%= `${a.houseName} ${a.street} ${a.city}` %>
                </p>
                <p><i data-lucide="phone-call"></i>
                  <b>
                    <%= a.phone %>
                  </b>
                </p>
              </div>
              <div class="buttons">
                <button type="button" data-addressid="<%= a._id %>" class="edit">
                  <img src="images/icons/edit-black.svg" alt="edit">
                  <b>Edit</b>
                </button>
                <button type="button" class="delete" data-addressid=" <%=a._id%> "> <img src="images/icons/delete.svg" alt="delete"> <b>Delete</b> </button>
              </div>
            </article>
            <% }) %>
            <% } %>

          </div>
          <button type="button" class="add-new-address-btn">Add Address</button>
          <div class="overlay">
            <form id="add-or-edit-address">
              <div>
                <h3>Address</h3>
              </div>
              <div>
                <label for="fullName">Full Name</label>
                <input type="text" name="fullName" id="fullName" placeholder="Full Name">
              </div>
              <div>
                <label for="address-phone">Phone</label>
                <input type="text" name="phone" id="address-phone" placeholder="Phone">
              </div>
              <div>
                <label for="country">Country</label>
                <select name="country" id="country">
                  <option value="" disabled selected>Country</option>
                  <% countries.forEach(c=> { %>
                  <option value="<%= c.isoCode %>" data-phonecode="<%= c.phonecode %>">
                    <%= c.name %>
                  </option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label for="state">state</label>
                <select name="state" id="state">
                  <option value="" disabled selected>State</option>
                </select>
              </div>
              <div>
                <label for="city">city</label>
                <select name="city" id="city">
                  <option value="" disabled selected>City</option>
                </select>
              </div>
              <div>
                <label for="street">Area, colony, street</label>
                <input type="text" name="street" id="street" placeholder="Area, colony, street">
              </div>
              <div>
                <label for="houseName">Flat, House n.o, Company, House name</label>
                <input type="text" name="houseName" id="houseName" placeholder="Flat, House n.o, Company, House name">
              </div>
              <div>
                <label for="pin">Pin</label>
                <input type="text" name="pin" id="pin" placeholder="Pin no">
              </div>
              <div class="form-buttons">
                <button type="button" class="cancel">Cancel</button>
                <button type="submit">Save</button>
              </div>
            </form>
          </div>
        </section>
      </div>
    </div>
  </section>

  <script src="https://unpkg.com/lucide@0.546.0/dist/umd/lucide.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

  <script>
    window.accountData = {
      states: <%- JSON.stringify(state) %>,
      cities: <%- JSON.stringify(city) %>,
      addresses: <%- JSON.stringify(address) %>,
    };

    lucide.createIcons();
  </script>
  <script src="/script/account.js" type="module"></script>
  <script src="/script/address.js" type="module"></script>
  <%- include('./partials/footer.ejs') %>
</body>

</html>